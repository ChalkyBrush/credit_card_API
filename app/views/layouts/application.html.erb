<script>
NotifierjsConfig.position = ["bottom", "right"];
  var flash = $(".flashy")
  if(flash.children().length > 0)
  {
      var message = flash.children().text() 
    if(flash.children('.label-warning').length >0)
    {
 
  Notifier.error(message, "Error!");
    }
    if(flash.children('.label-success').length >0)
    {
  var message = flash.children().text()  
  Notifier.success(message, "Success!");
    }
  }
</script>
